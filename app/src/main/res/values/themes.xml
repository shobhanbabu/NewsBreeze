<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsBreeze" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.AppCompat.TextView.ToolbarHeader" parent="Widget.AppCompat.TextView">
        <item name="font">@font/roboto_slab_semi_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.AppCompat.TextView.HeadlineItemHeader" parent="Widget.AppCompat.TextView">
        <item name="font">@font/roboto_slab_light</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:textColor">@color/dark_white</item>
    </style>

    <style name="Widget.AppCompat.TextView.HeadlineItemFooter" parent="Widget.AppCompat.TextView">
        <item name="font">@font/roboto_slab_light</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:textColor">@color/darker_white</item>
    </style>

    <style name="Widget.AppCompat.TextView.HeadlineDetailHeader" parent="Widget.AppCompat.TextView">
        <item name="font">@font/roboto_slab_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_29sp</item>
        <item name="android:textColor">@color/dark_white</item>
    </style>

    <style name="Widget.AppCompat.TextView.HeadlineDetailSource" parent="Widget.AppCompat.TextView">
        <item name="font">@font/roboto_slab_light</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:textColor">@color/dark_white</item>
    </style>

    <style name="Widget.AppCompat.TextView.HeadlineDetailDesc" parent="Widget.AppCompat.TextView">
        <item name="font">@font/roboto_slab_light</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColor">@color/darker_white</item>
    </style>

</resources>