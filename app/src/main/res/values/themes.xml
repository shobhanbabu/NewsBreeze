<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsBreeze" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryVariant">@color/light_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SearchEditText" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:textColor">@color/back_nav_bg</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:drawablePadding">@dimen/_8dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="HeadlineItemHeader" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/queens_park_bold</item>
        <item name="android:textSize">@dimen/_26sp</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">@dimen/_8dp</item>
    </style>

    <style name="HeadlineItemDesc" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/queens_park</item>
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:lines">3</item>
        <item name="android:lineSpacingExtra">@dimen/_8dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="HeadlineItemDate" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="HeadlineItemButtonText" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DetailHeadlineItemHeader" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/queens_park_bold</item>
        <item name="android:textSize">@dimen/_26sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">@dimen/_8dp</item>
    </style>

    <style name="DetailHeadlineItemDesc" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/queens_park</item>
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">@dimen/_8dp</item>
    </style>

    <style name="DetailHeadlineItemDate" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DetailHeadlineItemButtonText" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SavedHeadlinesDate" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SavedHeadlinesShowAll" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">@dimen/_12dp</item>
        <item name="android:textColor">@color/light_green</item>
    </style>
</resources>